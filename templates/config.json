{
    "port": 5678,
    "registryFile": "./bowerRepository.json",
    "timeout": 144000,
    "public": {
        "disabled": false,
        "registry": "http://bower.herokuapp.com/packages/",
        "registryFile": "./bowerRepositoryPublic.json",
        "whitelist": [],
        "blacklist": []
    },
    "authentication": {
        "enabled": true,
        "key": "<%= @authentication_key %>"
    },
    "repositoryCache": {
        "cachePrivate": true,
        "git": {
            "enabled": true,
            "cacheDirectory": "<%= @install_dir %>/cache_git",
            "host": "<%= @hostname %>",
            "port": 6789,
            "refreshTimeout": 10
        },
        "svn": {
            "enabled": true,
            "cacheDirectory": "<%= @install_dir %>/cache_svn",
            "host": "<%= @hostname %>",
            "port": 7891,
            "refreshTimeout": 10
        }
    }
}
